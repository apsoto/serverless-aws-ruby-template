  "version": "0.2.0",
  "configurations": [
    {
      "name": "RSpec - active spec file only",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceRoot}/bin/rspec",
      "useBundler": true,
      "internalConsoleOptions": "openOnSessionStart",
      // "includes": [],
      // "showDebuggerOutput": true,
      "args": [
        "--fail-fast",
        "--force-color",
        "-I",
        "${workspaceRoot}",
        "${file}"
      ]
    }
  ]
}